<p id="theme" hidden="true">{{theme}}</p>
<main class="user__main">
  <header>
    <h1 id="user__username">{{username}}</h1>
    <p>{{bio}}</p>
  </header>


  {{#if owner}}
  <div class="user__content">
    {{!-- <h2>Actions</h2> --}}

    <div class="card">
      <a href="/user/edit/{{id}}" class="user__link">
      <svg
        class="user__link-icon"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
      </svg>
      <span>Edit Profile</span>
    </a>
    </div>
      
    
    <div class="card">
      <a href="/user/servers/{{id}}" class="user__link">
      <svg
        class="user__link-icon"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M5.25 14.25h13.5m-13.5 0a3 3 0 0 1-3-3m3 3a3 3 0 1 0 0 6h13.5a3 3 0 1 0 0-6m-16.5-3a3 3 0 0 1 3-3h13.5a3 3 0 0 1 3 3m-19.5 0a4.5 4.5 0 0 1 .9-2.7L5.737 5.1a3.375 3.375 0 0 1 2.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 0 1 .9 2.7m0 0a3 3 0 0 1-3 3m0 3h.008v.008h-.008v-.008Zm0-6h.008v.008h-.008v-.008Zm-3 6h.008v.008h-.008v-.008Zm0-6h.008v.008h-.008v-.008Z" />
      </svg>
      <span>See Servers</span>
    </a>
    </div>
    
    <div class="card">
      <a href="/user/friends/{{id}}" class="user__link">
        <svg
        class="user__link-icon"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
      </svg>
      <span>See Friends</span>
    </a>
    </div>
  </div>

  <form action="/api/user/logout" method="post">
      <button type="submit" id="user__logout-button">Logout</button>
      {{#if owner}}
      <button id="user__delete-button">Delete Account</button>
      {{/if}}
  </form>

  {{else}} {{#if authed}} {{#if friended}}
  <a href="/privateMessage/{{privateMessageId}}" class="user__chat-link">
    Chat
  </a>
  <p class="user__info">Already your friend.</p>
  {{else}} {{#if requested}}
  <p class="user__info">Already sent friend request.</p>
  {{else}}
  <button id="user__request-button">Send Friend Request</button>
  {{/if}} {{/if}} {{else}} {{/if}} {{/if}} 
</main>

